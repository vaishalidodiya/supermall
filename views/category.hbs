<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Category</title>
  {{> headers }}

  <style>
    #addCategoryForm .form-control,
    #addCategoryForm .form-select {
      max-width: 550px;
      margin: 10px auto;
      box-shadow: 0 0 8px rgba(0, 0, 0, 0.2);
      font-size: 20px;
    }
  </style>
</head>
<body style="background-color: rgb(243, 239, 235);">

  {{> navigation }}

  <div id="successMessage" class="alert alert-success text-center" style="display: none;"></div>

  <div id="categoryDiv" class="container-fluid px-4 mt-5">
    <button type="button" id="categoryBtn" class="btn mb-3 fs-5" style="background-color: rgb(31, 31, 148); color: rgb(245, 231, 224)">
      Add Category
    </button>

    <h1 class="text-center" style="color: rgb(13, 13, 107);">Category List</h1>

    <div class="table-responsive">
      <table class="table table-bordered border-secondary" id="categoryTable">
        <thead>
          <tr>
            <th style="background-color: rgb(31, 31, 148); color: rgb(241, 129, 77); font-size: 20px;">Sr no.</th>
            <th style="background-color: rgb(31, 31, 148); color: rgb(241, 129, 77); font-size: 20px;">Category Name</th>
            <th style="background-color: rgb(31, 31, 148); color: rgb(241, 129, 77); font-size: 20px;">Description</th>
            <th style="background-color: rgb(31, 31, 148); color: rgb(241, 129, 77); font-size: 20px;">Action</th>
          </tr>
        </thead>
        <tbody></tbody>
      </table>
    </div>
  </div>

  <!-- Add Category Form -->
  <div id="categoryForm" style="display: none;" class="container-fluid p-3 rounded">
    <div class="row justify-content-center">
      <div class="col-12 col-md-8 col-lg-6">
        <h1 class="text-center" style="color: rgb(13, 13, 107); margin-top: 30px; font-size: 40px">Add Category</h1>
        <form id="addCategoryForm">
          <input
            type="text"
            id="categoryName"
            class="form-control mb-2"
            placeholder="Category Name"
            name="categoryName"
            style="margin-top: 35px !important;"
            required
          />
          <div class="text-danger small" id="categoryNameError"></div>

          <input
            type="text"
            id="description"
            class="form-control mb-2"
            placeholder="description"
            name="description"
            required
          />
          <div class="text-danger small" id="descriptionError"></div>

          <div class="d-flex justify-content-center mt-3">
            <input type="submit" value="Submit" id="btn" class="btn text-white me-2" style="background-color: rgb(31, 31, 148); font-size: 20px;" />
            <button type="button" id="backToMenuFromAdd" class="btn text-white" style="background-color: rgb(31, 31, 148); font-size: 20px;">Back</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Delete Modal -->
  <div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-labelledby="deleteConfirmModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <form id="deleteForm" method="POST">
          <div class="modal-header">
            <h5 class="modal-title">Confirm Delete</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
          </div>
          <div class="modal-body">Are you sure you want to delete this Category?</div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-danger">Yes, Delete</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Update Modal -->
  <div class="modal fade" id="updateModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <form id="updateForm" method="POST">
          <div class="modal-header">
            <h5 class="modal-title">Update Category</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
          </div>
          <div class="modal-body">
            <label for="updateCategoryName">Category Name:</label>
            <input type="text" id="updateCategoryName" name="categoryName" class="form-control mb-2" required />

            <label for="updatedescription">description:</label>
            <input type="text" id="updatedescription" name="description" class="form-control mb-2" required />
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-warning">Update</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script src="../js/category.js"></script>

</body>
</html>
