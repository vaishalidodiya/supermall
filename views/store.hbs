<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Store Management</title>


  
     {{> headers }}
  </head>
  <body>
      

  <div class="card">
  <div class="card-header">
     {{> navigation }}
  </div>
  <div class="card-body">
    <div
      id="successMessage"
      class="alert alert-success text-center"
      style="display: none;"
    ></div>
    <div id="inputDiv" class="px-4">
      <button type="button" id="storeBtn" class="btn btn-primary mb-3">Add New
        Store</button>

          <h1 class="text-center">Store List</h1>
      <table class="table" id="storeTable" >
        <thead>
          <tr>
            <th>Sr no.</th>
            <th>Store Name</th>
            <th>Address</th>
            <th>Floor</th>
            <th>Contact Number</th>
            <th>Description</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody></tbody>
      </table>

      <button
        type="button"
        id="backToMenuFromList"
        class="btn btn-secondary mt-3"
      >Back</button>
    </div>

  </div>
</div>
  
    <div id="storeForm" style="display: none;" class="p-4 border rounded mx-4">
      <h5>Add Store</h5>
      <form id="addstoreForm">
        <input
          type="text"
          class="form-control mb-2"
          placeholder="Store Name"
          name="storeName"
          required
        />
        <div class="text-danger small" id="storeNameError"></div>

        <input
          type="text"
          class="form-control mb-2"
          placeholder="Address"
          name="address"
          required
        />
        <div class="text-danger small" id="addressError"></div>

        <input
          type="text"
          class="form-control mb-2"
          placeholder="Floor"
          name="floor"
          required
        />
        <div class="text-danger small" id="floorError"></div>

        <input
          type="text"
          class="form-control mb-2"
          placeholder="Contact Number"
          name="contactNumber"
          required
        />
        <div class="text-danger small" id="contactError"></div>

        <input
          type="text"
          class="form-control mb-2"
          placeholder="Description"
          name="description"
          required
        />
        <div class="text-danger small" id="descriptionError"></div>

        <input type="submit" value="Submit" id="storeSubmitBtn" class="btn btn-success" />
        <button
          type="button"
          id="backToMenuFromAdd"
          class="btn btn-secondary ms-2"
        >Back</button>
      </form>
    </div>

    <!-- Store Delete Modal -->
    <div
      class="modal fade"
      id="deleteConfirmModal"
      tabindex="-1"
      aria-labelledby="deleteConfirmModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <form id="deleteForm" method="POST">
            <div class="modal-header">
              <h5 class="modal-title">Confirm Delete</h5>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="modal"
              ></button>
            </div>
            <div class="modal-body">Are you sure you want to delete this store?</div>
            <div class="modal-footer">
              <button
                type="button"
                class="btn btn-secondary"
                data-bs-dismiss="modal"
              >Cancel</button>
              <button type="submit" class="btn btn-danger">Yes, Delete</button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- Store Update Modal -->
    <div class="modal fade" id="updateModal" tabindex="-1" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <form id="updateForm" method="POST">
            <div class="modal-header">
              <h5 class="modal-title">Update Store</h5>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="modal"
              ></button>
            </div>
            <div class="modal-body">
              <label for="updateStoreName">Store Name:</label>
              <input
                type="text"
                id="updateStoreName"
                name="storeName"
                class="form-control mb-2"
                required
              />

              <label for="updateAddress">Address:</label>
              <input
                type="text"
                id="updateAddress"
                name="address"
                class="form-control mb-2"
                required
              />

              <label for="updateFloor">Floor:</label>
              <input
                type="text"
                id="updateFloor"
                name="floor"
                class="form-control mb-2"
                required
              />
              <div class="text-danger small" id="floorUpdateError"></div>


              <label for="updateContactNumber">Contact Number:</label>
              <input
                type="text"
                id="updateContactNumber"
                name="contactNumber"
                class="form-control mb-2"
                required
              />
              <div
                id="contactErrorUpdate"
                style="color: red; font-size: 0.9rem; margin-top: 5px;"
              ></div>

              <label for="updatedescription">Description:</label>
              <input
                type="text"
                id="updatedescription"
                name="description"
                class="form-control mb-2"
                required
              />
            </div>
            <div class="modal-footer">
              <button
                type="button"
                class="btn btn-secondary"
                data-bs-dismiss="modal"
              >Cancel</button>
              <button type="submit" class="btn btn-warning">Update</button>
            </div>
          </form>
        </div>
      </div>
    </div>

<!-- view -->
<div id="viewStorePage" class="p-4" style="display: none;">
  <h3 class="text-center mb-4">Store Details</h3>
  <div class="card">
    <div class="card-body">
      <p><strong>Store Name:</strong> <span id="viewStoreName"></span></p>
      <p><strong>Address:</strong> <span id="viewAddress"></span></p>
      <p><strong>Floor:</strong> <span id="viewFloor"></span></p>
      <p><strong>Contact Number:</strong> <span id="viewContactNumber"></span></p>
      <p><strong>Description:</strong> <span id="viewDescription"></span></p>
    </div>
  </div>
  <div>
    <button id="addProduct" class="mt-3">Add Product</button>
    <button id="listProduct" class="ms-2" >List of Products</button>
  </div>
  <div class="mt-4 text-center">
    <button id="backToListFromView" class="btn btn-secondary">Back</button>
  </div>
</div>


<!-- Product -->
   <div
      id="productSuccessMessage"
      class="alert alert-success text-center"
      style="display: none;"
    ></div>
<div id="productForm" class="p-4 border rounded mx-4" style="display: none;">
      <h5>Add Product</h5>
      <form id="addProductForm">
        <input
          type="text"
          class="form-control mb-2"
          placeholder="Product Name"
          name="productName"
          required
        />
        <div class="text-danger small" id="productNameError"></div>

        <input
          type="text"
          class="form-control mb-2"
          placeholder="Description"
          name="productDescription"
          required
        />
        <div class="text-danger small" id="descriptionError"></div>

        <input
          type="text"
          class="form-control mb-2"
          placeholder="Floor"
          name="productFloor"
          required
        />
        <div class="text-danger small" id="productFloorError"></div>

        <input
          type="text"
          class="form-control mb-2"
          placeholder="Features"
          name="features"
          required
        />
        <div class="text-danger small" id="featuresError"></div>

        <input
          type="text"
          class="form-control mb-2"
          placeholder="Price"
          name="price"
          required
        />
        <div class="text-danger small" id="priceError"></div>

        <input type="submit" value="Submit" id="productSubmitBtn" class="btn btn-success" />
        <button
          type="button"
          id="backToMenuFromAddProduct"
          class="btn btn-secondary ms-2"
        >Back</button>
      </form>
    </div>

    <!-- list of products -->

      <div class="px-4" style="display: none;" id="productList">
        <h1>Product List</h1>

        <table class="table" id="productTable">
          <thead>
            <tr>
              <th>Sr no.</th>
              <th>Product Name</th>
              <th>Description</th>
              <th>Floor</th>
              <th>Features</th>
              <th>Price</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody></tbody>

        </table>

        <button type="button" id="backToMenuFromProductList" class="btn btn-secondary mt-3">Back</button>
      </div>

       <!-- Product Delete Modal -->
    <div
      class="modal fade"
      id="deleteProductModal"
      tabindex="-1"
      aria-labelledby="deleteConfirmModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <form id="deleteProductForm" method="POST">
            <div class="modal-header">
              <h5 class="modal-title">Confirm Delete</h5>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="modal"
              ></button>
            </div>
            <div class="modal-body">Are you sure you want to delete this store?</div>
            <div class="modal-footer">
              <button
                type="button"
                class="btn btn-secondary"
                data-bs-dismiss="modal"
              >Cancel</button>
              <button type="submit" class="btn btn-danger">Yes, Delete</button>
            </div>
          </form>
        </div>
      </div>
    </div>

     <!-- Product Update Modal -->
    <div class="modal fade" id="productUpdateModal" tabindex="-1" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <form id="updateProductForm" method="POST">
            <div class="modal-header">
              <h5 class="modal-title">Update Product</h5>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="modal"
              ></button>
            </div>
            <div class="modal-body">
              <label for="updateProductName">Product Name:</label>
              <input
                type="text"
                id="updateProductName"
                name="productName"
                class="form-control mb-2"
                required
              />

              <label for="productDescription">Description:</label>
              <input
                type="text"
                id="productDescription"
                name="productDescription"
                class="form-control mb-2"
                required
              />

               <label for="updateProductFloor">Floor:</label>
              <input
                type="text"
                id="updateProductFloor"
                name="floor"
                class="form-control mb-2"
                required
              />
              <div class="text-danger small" id="productFloorUpdateError"></div>


              <label for="features">Features:</label>
              <input
                type="text"
                id="features"
                name="features"
                class="form-control mb-2"
                required
              />

              <label for="productPrice">Price:</label>
              <input
                type="text"
                id="productPrice"
                name="price"
                class="form-control mb-2"
                required
              />
             
            </div>
            <div class="modal-footer">
              <button
                type="button"
                class="btn btn-secondary"
                data-bs-dismiss="modal"
              >Cancel</button>
              <button type="submit" class="btn btn-warning">Update</button>
            </div>
          </form>
        </div>
      </div>
    </div>
    

  
    <script src="../js/store.js"></script>

  </body>
</html>