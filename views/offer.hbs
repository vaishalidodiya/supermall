<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Offer</title>
    {{> headers }}

    <style>
      #addOfferForm .form-control,
      #addOfferForm .form-select {
        max-width: 350px;
        margin: 10px auto;
        box-shadow: 0 0 8px rgba(0, 0, 0, 0.2);
        font-size: 20px;
      }

      @media (max-width: 576px) {
        #addOfferForm .form-control,
        #addOfferForm .form-select {
          max-width: 100%;
          width: 100%;
        }
      }
    </style>
  </head>
  <body style="background-color: rgb(243, 239, 235);">
    {{> navigation }}

    <div id="successMessage" class="alert alert-success text-center" style="display: none;"></div>

    <div class="container-fluid px-3 mt-5">
      <div id="offerDiv">
        <button type="button" id="offerBtn" class="btn btn-primary mb-3 fs-5" style="background-color: rgb(31, 31, 148); color:rgb(245, 231, 224)">Add Offer</button>
        <h1 class="text-center">Offer List</h1>

        <div class="table-responsive">
          <table class="table table-bordered border-secondary" id="offerTable">
            <thead>
              <tr>
                <th style="background-color: rgb(31, 31, 148); color:rgb(241, 129, 77); font-size:20px;">Sr no.</th>
                <th style="background-color: rgb(31, 31, 148); color:rgb(241, 129, 77); font-size:20px;">Offer Name</th>
                <th style="background-color: rgb(31, 31, 148); color:rgb(241, 129, 77); font-size:20px;">Description</th>
                <th style="background-color: rgb(31, 31, 148); color:rgb(241, 129, 77); font-size:20px;">Discount</th>
                <th style="background-color: rgb(31, 31, 148); color:rgb(241, 129, 77); font-size:20px;">StartDate</th>
                <th style="background-color: rgb(31, 31, 148); color:rgb(241, 129, 77); font-size:20px;">EndDate</th>
                <th style="background-color: rgb(31, 31, 148); color:rgb(241, 129, 77); font-size:20px;">Action</th>
              </tr>
            </thead>
            <tbody></tbody>
          </table>
        </div>
      </div>

      <div id="offerForm" style="display: none;" class="p-3 border rounded mt-5">
        <h1 class="text-center" style="color: rgb(13, 13, 107); margin-top:30px; font-size:40px">Add Offer</h1>
        <form id="addOfferForm" class="d-flex flex-column align-items-center">
          <input type="text" id="offerName" class="form-control mb-2" placeholder="Offer Name" name="offerName" style="margin-top: 35px !important;" required />
          <div class="text-danger small" id="offerNameError"></div>

          <input type="text" id="description" class="form-control mb-2" placeholder="Description" name="description" required />
          <div class="text-danger small" id="descriptionError"></div>

          <input type="text" id="discount" class="form-control mb-2" placeholder="Discount" name="discount" required />
          <div class="text-danger small" id="discountError"></div>

          <input type="text" id="startDate" class="form-control mb-2" placeholder="StartDate" name="startDate" required />
          <div class="text-danger small" id="startDateError"></div>

          <input type="text" id="endDate" class="form-control mb-2" placeholder="EndDate" name="endDate" required />
          <div class="text-danger small" id="endDateError"></div>

          <div class="d-flex flex-column flex-md-row justify-content-center mt-3 w-100">
            <input type="submit" value="Submit" id="btn" class="btn text-white mb-2 mb-md-0 me-md-2" style="background-color: rgb(31, 31, 148); font-size:20px;" />
            <button type="button" id="backToMenuFromAdd" class="btn text-white" style="background-color: rgb(31, 31, 148); font-size:20px;">Back</button>
          </div>
        </form>
      </div>
    </div>

    <!-- Delete Modal -->
    <div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-labelledby="deleteConfirmModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <form id="deleteForm" method="POST">
            <div class="modal-header">
              <h5 class="modal-title">Confirm Delete</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">Are you sure you want to delete this Offer?</div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
              <button type="submit" class="btn btn-danger">Yes, Delete</button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- Update Modal -->
    <div class="modal fade" id="updateModal" tabindex="-1" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <form id="updateForm" method="POST">
            <div class="modal-header">
              <h5 class="modal-title">Update Offer</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
              <label for="updateOfferName">Offer Name:</label>
              <input type="text" id="updateOfferName" name="offerName" class="form-control mb-2" required />

              <label for="updatedescription">Description:</label>
              <input type="text" id="updatedescription" name="description" class="form-control mb-2" required />

              <label for="updateDiscount">Discount:</label>
              <input type="text" id="updateDiscount" name="discount" class="form-control mb-2" required />

              <label for="updateStartDate">StartDate:</label>
              <input type="text" id="updateStartDate" name="startDate" class="form-control mb-2" required />

              <label for="updateEndDate">EndDate:</label>
              <input type="text" id="updateEndDate" name="endDate" class="form-control mb-2" required />
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
              <button type="submit" class="btn btn-warning">Update</button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <script src="../js/offer.js"></script>
  </body>
</html>
