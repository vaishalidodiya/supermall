<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Offer</title>
    {{> headers }}
  </head>
  <body>

 
 <div class="card">
  <div class="card-header">
     {{> navigation }}
  </div>
  <div class="card-body">
       <div
      id="successMessage"
      class="alert alert-success text-center"
      style="display: none;"
    ></div>

      <button type="button" id="offerBtn" class="btn btn-primary mb-3">Add Offer</button>
    <div id="offerDiv" class="px-4" >

        <h1 class="text-center"> Offer List</h1>
      <table class="table" id="offerTable" >

        <thead>

          <tr>
            <th>Sr no.</th>
            <th>Offer Name</th>
            <th>description</th>
            <th>Discount</th>
            <th>StartDate</th>
            <th>EndDate</th>
            <th>Action</th>
          </tr>

        </thead>
        <tbody></tbody>
      </table>

      <button
        type="button"
        id="backToMenuFromList"
        class="btn btn-secondary mt-3"
      >Back</button>
    </div>
  </div>
</div>


      

    <div id="offerForm" style="display: none;" class="p-3 rounded">

      <h1>Add Offer</h1>
      <form id="addOfferForm">

        <input
          type="text"
          id="offerName"
          class="form-control mb-2"
          placeholder="Offer Name"
          name="offerName"
          required
        />
        <div class="text-danger small" id="offerNameError"></div>

        <input
          type="text"
          id="description"
          class="form-control mb-2"
          placeholder="description"
          name="description"
          required
        />
        <div class="text-danger small" id="descriptionError"></div>

        <input
          type="text"
          id="discount"
          class="form-control mb-2"
          placeholder="Discount"
          name="discount"
          required
        />
        <div class="text-danger small" id="discountError"></div>

        <input
          type="text"
          id="startDate"
          class="form-control mb-2"
          placeholder="StartDate"
          name="startDate"
          required
        />
        <div class="text-danger small" id="startDateError"></div>

        <input
          type="text"
          id="endDate"
          class="form-control mb-2"
          placeholder="EndDate"
          name="endDate"
          required
        />
        <div class="text-danger small" id="endDateError"></div>

        <input type="submit" value="Submit" id="btn" class="btn btn-success" />
        <button
          type="button"
          id="backToMenuFromAdd"
          class="btn btn-secondary ms-2"
        >Back</button>
      </form>
    </div>

    <div
      class="modal fade"
      id="deleteConfirmModal"
      tabindex="-1"
      aria-labelledby="deleteConfirmModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <form id="deleteForm" method="POST">
            <div class="modal-header">
              <h5 class="modal-title">Confirm Delete</h5>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="modal"
              ></button>
            </div>
            <div class="modal-body">Are you sure you want to delete this Offer?</div>
            <div class="modal-footer">
              <button
                type="button"
                class="btn btn-secondary"
                data-bs-dismiss="modal"
              >Cancel</button>
              <button type="submit" class="btn btn-danger">Yes, Delete</button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <div class="modal fade" id="updateModal" tabindex="-1" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <form id="updateForm" method="POST">
            <div class="modal-header">
              <h5 class="modal-title">Update Offer</h5>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="modal"
              ></button>
            </div>
            <div class="modal-body">
              <label for="updateOfferName">Offer Name:</label>
              <input
                type="text"
                id="updateOfferName"
                name="offerName"
                class="form-control mb-2"
                required
              />

              <label for="updatedescription">description:</label>
              <input
                type="text"
                id="updatedescription"
                name="description"
                class="form-control mb-2"
                required
              />

              <label for="updateDiscount">Discount:</label>
              <input
                type="text"
                id="updateDiscount"
                name="discount"
                class="form-control mb-2"
                required
              />

              <label for="updateStartDate">StartDate:</label>
              <input
                type="text"
                id="updateStartDate"
                name="startDate"
                class="form-control mb-2"
                required
              />

              <label for="updateEndDate">EndDate:</label>
              <input
                type="text"
                id="updateEndDate"
                name="endDate"
                class="form-control mb-2"
                required
              />

            </div>
            <div class="modal-footer">
              <button
                type="button"
                class="btn btn-secondary"
                data-bs-dismiss="modal"
              >Cancel</button>
              <button type="submit" class="btn btn-warning">Update</button>
            </div>
          </form>
        </div>
      </div>
    </div>

    

    <script src="../js/offer.js"></script>
  </body>
</html>